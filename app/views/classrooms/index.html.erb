<div class="school-box large-12 columns">

  <h3>Classes</h3>

  <% school_id = @school_id  %>
  <% user_id =  current_user.id %>
  <% @school.each do |s| %>
    <div class="large-6 medium-6 columns">
      <% s.classrooms.each do |c| %>
      <div class="callout">

        <h5>Subject: <%= c.subject %></h5>
        <h5>Grade: <%= c.grade %></h5>
        <h5>Classroom Number: <%= c.class_number %></h5><br>
        <%= link_to 'Add Student To Your Class', user_school_classroom_students_path(current_user, s, c ) %><br>
        <%= link_to 'Classroom info', user_school_classroom_path(user_id, @school_id, c.id ) %><br>
        <%= link_to 'Edit Classroom', edit_user_school_classroom_path(user_id, @school_id, c ) %><br>
        <%= link_to 'Delete classroom', c, method: :delete, data: { confirm: 'Are you sure?' } %><br>

      </div>

      <% end %>
    </div>
  <% end %>

  <div class="large-6 medium-6 small-12 columns">
    <h4>Add Classroom</h4>
    <div class="translucent-form-overlay">
      <%= render 'form', classroom: @classroom %>
    </div>

  </div>
</div>

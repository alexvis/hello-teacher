
<div class="translucent-form-overlay">

    <h3 align="center">Edit profile for <%= current_user.full_name %> </h3>
      <%= form_for(current_user, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <%= f.label :first_name %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name %>

          <%= f.label :email %>
          <%= f.email_field :email %>

        <% if(current_user.profile_photo?) %>
          <img src="<%= current_user.profile_photo %>" alt="">
            <%= f.label :profile_photo %>
            <%= f.file_field :profile_photo %>
        <% end %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

          <%= f.label :current_password %> <i>Please enter your current password to confirm your changes.</i><br>
          <%= f.password_field :current_password, autocomplete: "off" %>

          <%= f.submit "Update", class: 'button submit-button' %>


        <h6>Change Your Password</h6><br>
          <%= f.label :password %><br>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>

          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <% end %>

    <h6>Cancel My Account</h6>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </div>

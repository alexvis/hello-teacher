<div class="school-box large-12 medium-12 columns" >

  <h4>Classroom Subject: <%= @classroom[0].subject %> </h4>

  <% school_id = @school_id  %>
  <% user_id =  current_user.id %>
  <% classroom_id =  @classroom_id %>
  <div class="callout large-12 columns">
    <!-- Student information -->
    <div class="large-6 medium-6 columns">

      <h4>Student Name: <%= @student.full_name %> </h4>
      <h4>Student Grade: <%= @student.grade %> </h4>
      <h4>Student last Update: <%= @student.updated_at.strftime("%m/%d/%Y") %> </h4>
      <!-- Student profile picture if id one  -->
      <% if @student.profile_photo? %>
      <%= image_tag(@student.profile_photo) %><br>
      <% end %>

      <% if @student.tokens.length >=1 %>
        <h5>Student Token: <%= @student.tokens[0].token %></h5>
        <h5>Student Id: <%= @student.id %></h5><br>
      <% else %>
        <%= form_for @token, html: { class: ''} do |f| %>
          <%= f.label :token, 'Token' %>
          <%= f.text_field :token %>

          <%= f.hidden_field :user_id, value: user_id %>

          <%= f.hidden_field :student_id, value: @student.id %>

          <%= f.submit "Submit", class: 'button submit-button' %>
        <% end %>
      <% end %>
      <%= link_to 'Delete Token', @student.tokens[0], method: :delete, data: { confirm: 'Are you sure?' } %><br>
      <%= link_to 'Edit Student', edit_user_school_classroom_student_path(user_id, @school_id, classroom_id, @student.id ) %><br>
      <%= link_to 'Back to Classroom', user_school_classroom_path(user_id, @school_id, classroom_id) %><br>
      <%= link_to 'Delete Student', @student, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
      <br><br>
    </div>
    <div class="large-5 medium-5 columns">
      <% if @student.tokens.length >= 2%>
        <% parent = User.where(id: @student.tokens[1].user_id) %>
        <% parent.each do |parent| %>
          <h6>Parent Name: <%= parent.full_name %></h6>
          <h6>Email: <%= parent.email %></h6>
          <% if parent.profile_photo? %>
          <%= image_tag(parent.profile_photo) %><br>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="large-6 columns">

    <%= form_for @comment, html: {class: ''} do |f| %>
      <%= f.label :subject %>
      <%= f.text_field :subject %>

      <%= f.label :comment, 'Class Comment' %>
      <%= f.text_area :comment, size: "60x6" %>

      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.hidden_field :classroom_id, value: @classroom_id%>

      <%= f.submit "Submit", class: 'button submit-button' %>
    <% end %>

    </div>
  </div>
</div>
